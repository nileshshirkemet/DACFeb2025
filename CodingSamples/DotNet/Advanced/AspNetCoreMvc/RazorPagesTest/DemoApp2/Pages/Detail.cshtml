@page
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@model DemoApp.Pages.Detail
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
    <head>
        <title>DemoApp</title>
    </head>
    <body>
        <h1>Welcome Customer</h1>
        <h3>Orders of @User.Identity.Name</h3>
        <table border="1">
            <tr>
                <th>Product No</th>
                <th>Quantity</th>
                <th>Order Date</th>
            </tr>
            @foreach(var entry in Model.Invoice)
            {
                <tr>
                    <td>@entry.ProductId</td>
                    <td>@entry.Quantity</td>
                    <td>@entry.OrderDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </table>
        <p>
            <a asp-page-handler="logout">Logout</a>
        </p>
    </body>
</html>

